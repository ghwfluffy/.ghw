#!/bin/bash
#
# Cheeky program that pretends to save your console session
# when you accidentally type :w in the wrong window
#

set -eu -o pipefail

step() {

    clear
    echo "$1"
    sleep 0.05
}

step "[                                          ] 0%"
step "[/                                         ] 2%"
step "[=-                                        ] 4%"
step "[==\                                       ] 7%"
step "[===|                                      ] 9%"
step "[====/                                     ] 11%"
step "[=====-                                    ] 14%"
step "[======\                                   ] 16%"
step "[=======|                                  ] 18%"
step "[========/                                 ] 21%"
step "[=========-                                ] 23%"
step "[==========\                               ] 25%"
step "[===========|                              ] 28%"
step "[============/                             ] 31%"
step "[=============-                            ] 33%"
step "[==============\                           ] 36%"
step "[===============|                          ] 38%"
step "[================/                         ] 40%"
step "[=================-                        ] 43%"
step "[==================\                       ] 45%"
step "[===================|                      ] 47%"
step "[====================/                     ] 50%"
step "[=====================-                    ] 52%"
step "[======================\                   ] 54%"
step "[=======================|                  ] 57%"
step "[========================/                 ] 59%"
step "[=========================-                ] 61%"
step "[==========================\               ] 64%"
step "[===========================|              ] 66%"
step "[============================/             ] 68%"
step "[=============================-            ] 71%"
step "[==============================\           ] 73%"
step "[===============================|          ] 75%"
step "[================================/         ] 78%"
step "[=================================-        ] 80%"
step "[==================================\       ] 82%"
step "[===================================|      ] 85%"
step "[====================================/     ] 87%"
step "[=====================================-    ] 89%"
step "[======================================\   ] 91%"
step "[=======================================|  ] 93%"
step "[========================================/ ] 95%"
step "[=========================================-] 98%"
step "[==========================================] 100%"
step "[==========================================] Complete!"
